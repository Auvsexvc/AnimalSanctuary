@model IEnumerable<Animal>
@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Animals in sanctuary</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AnimalSanctuary" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Add animal
            </a>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Space left:</h3>
            <h3>@ViewBag.SpaceLeft</h3>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.Id
                    </td>
                    <td width="40%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.Type
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-primary mx-2" asp-controller="AnimalSanctuary" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-danger mx-2" asp-controller="AnimalSanctuary" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

