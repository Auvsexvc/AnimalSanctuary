@model WebApp.Data.Animal

@{
    ViewData["Title"] = "Delete";
}
<div class="card border-dark mb-3 mt-3 col-md-8 offset-2  w-30">
    <div class="card-header bg-danger text-light">
        <h3 class="card-title">Delete ?</h3>
    </div>
    <div class="card-body">
        <div class="col-md-11 d-flex">
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Sex" class="control-label"></label>
                    <input asp-for="Sex" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="HealthState" class="control-label"></label>
                    <input asp-for="HealthState" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="Attitude" class="control-label"></label>
                    <input asp-for="Attitude" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" type="date" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Specie" class="control-label"></label>
                    <input asp-for="Specie" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Facility" class="control-label"></label>
                    <input asp-for="Facility" class="form-control" readonly />
                </div>
            </div>
        </div>
        <div class="btn-group-sm card-footer mt-4">
            <form asp-action="Delete">
                <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Yes, Delete!</button>
            @if (ViewData["Reffer"] != null){
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary float-end"><i class="bi bi-x"></i> Cancel</a>
            }else{
                    <a asp-action="Index" class="btn btn-sm btn-secondary float-end"><i class="bi bi-list"></i> Cancel</a>
            }
            </form>
        </div>
    </div>
</div>
