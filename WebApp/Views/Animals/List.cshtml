
@model IEnumerable<AnimalViewModel>
@{
    ViewData["Title"] = "List";
}
<div class="card border-dark mb-3 mt-3 col-md-12">
    <div class="card-header bg-info text-light">
        <h3 class="card-title">Animals in Sanctuary</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped bg-light" style="width: 100%">
            <thead>
                <tr>
                    @await Html.PartialAsync("_AnimalsListHeaders", Model)
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    @await Html.PartialAsync("_AnimalsListRow", obj)
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a class="btn btn-info btn-sm" asp-controller="Animals" asp-action="Details" asp-route-id="@obj.Id"><i class="bi bi-eye"></i></a>
                                <a class="btn btn-warning btn-sm" asp-controller="Animals" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                                <a class="btn btn-danger btn-sm" asp-controller="Animals" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="btn-group-sm card-footer mt-4">
            <a asp-controller="Animals" asp-action="Create" class="btn btn-sm btn-success"><i class="bi bi-plus-circle"></i> Add new</a>
    </div>
</div>

