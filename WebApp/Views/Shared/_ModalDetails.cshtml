@model             IBaseViewModel

<div class="modal fade" id="Modal_Details_@Model.Id" tabindex="-1" aria-labelledby="Details_Title_@Model.Id" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content card border-dark mb-3 mt-3 col-8 w-30">
            <div class="modal-header card-header bg-info text-light">
                <h5 class="modal-title card-title" id="Details_Title_@Model.Id">@Model.Name details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body card-body">
                @await Html.PartialAsync("_RO", Model)
            </div>
            <div class="modal-footer card-footer btn-group-sm mt-4">
                <button type="button" class="btn btn-sm btn-secondary float-end" data-bs-dismiss="modal"><i class="bi bi-x"></i> Close</button>
            </div>
        </div>
    </div>
</div>