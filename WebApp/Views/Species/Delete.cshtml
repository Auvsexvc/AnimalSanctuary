@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model WebApp.Models.AnimalSpecieViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="card border-dark mb-3 mt-3 col-md-8 offset-2  w-30">
    <div class="card-header bg-danger text-light">
        <h3 class="card-title">Delete ?</h3>
    </div>
    <div class="card-body">
        <div class="col-md-11 d-flex">
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" readonly></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" readonly />
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group-sm card-footer mt-4">
        <form asp-action="Delete">
            @if (userManager.GetUser(HttpContextAccessor.HttpContext!.Session.GetString("Id")) != null)
            {
                <button type="submit" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Yes, Delete!</button>
            }
            @if (ViewBag.SessionReturn == "Details")
            {
                <a asp-action="@ViewBag.SessionReturn" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary float-end"><i class="bi bi-x"></i> Cancel</a>
            }
            else
            {
                <a asp-action="List" class="btn btn-sm btn-secondary float-end"><i class="bi bi-list"></i> Back to list</a>
            }
        </form>
    </div>
</div>
