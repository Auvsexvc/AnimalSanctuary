@model WebApp.Models.UpdateFacilityViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="card border-dark mb-3 mt-3 col-md-8 offset-2 w-30">
    <div class="card-header bg-warning text-light">
        <h3 class="card-title">Edit specie</h3>
    </div>
    <form asp-action="Edit">
    <div class="card-body">
        <div class="col-md-11 d-flex">
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaxCapacity" class="control-label"></label>
                    <input asp-for="MaxCapacity" class="form-control"/>
                    <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FreeSpace" class="control-label"></label>
                    <input asp-for="FreeSpace" class="form-control" readonly />
                    <span asp-validation-for="FreeSpace" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-5 offset-1">
                <div class="form-group">
                    <label asp-for="BuildingNumber" class="control-label"></label>
                    <input asp-for="BuildingNumber" class="form-control"/>
                    <span asp-validation-for="BuildingNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApartmentNumber" class="control-label"></label>
                    <input asp-for="ApartmentNumber" class="form-control"/>
                    <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StreetName" class="control-label"></label>
                    <input asp-for="StreetName" class="form-control"/>
                    <span asp-validation-for="StreetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (Model.Animals != null && Model.Animals.Count() > 0)
                    {
                        <label asp-for="Animals" class="control-label"></label>
                        <div class="card container-fluid bg-gradient">
                            <ul class="d-flex mt-2 row-cols-auto flex-column justify-content-between text-dark list-unstyled">
                                @foreach (var item in Model.Animals)
                                {
                                    <li class="row ms-2">@item.Name</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer form-group mt-4">
        <button type="submit" class="btn btn-sm btn-warning"><i class="bi bi-save"></i> Save</button>
        @if (ViewBag.SessionReturn == "Details")
        {
            <a asp-action="@ViewBag.SessionReturn" asp-route-id="@Model.Id" class="btn btn-sm btn-secondary float-end"><i class="bi bi-x"></i> Cancel</a>
        }
        else
        {
            <a asp-action="List" class="btn btn-sm btn-secondary float-end"><i class="bi bi-list"></i> Back to list</a>
        }
    </div>
</form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

