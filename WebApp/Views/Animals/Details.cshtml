@model WebApp.Data.Animal

@{
    ViewData["Title"] = "Details";
}
<div class="card border-dark mb-3 mt-3 col-md-4 offset-4  w-30">
    <div class="card-header bg-info text-light">
        <h3 class="card-title">Animal</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth" class="control-label"></label>
            <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Sex" class="control-label"></label>
            <input asp-for="Sex" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="HealthState" class="control-label"></label>
            <input asp-for="HealthState" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Attitude" class="control-label"></label>
            <input asp-for="Attitude" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="DateCreated" class="control-label"></label>
            <input asp-for="DateCreated" type="date" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Specie" class="control-label"></label>
            <input asp-for="Specie" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <input asp-for="Type" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Facility" class="control-label"></label>
            <input asp-for="Facility" class="form-control" readonly />
        </div>
        <div class="btn-group-sm card-footer mt-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm float-end">Back to List</a>
        </div>
    </div>
</div>
