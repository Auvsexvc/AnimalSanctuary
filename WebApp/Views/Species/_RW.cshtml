@model WebApp.Models.UpdateSpecieViewModel

<div class="col-md-11 d-flex">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-5 offset-1">
        <div class="form-group">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-5 offset-1">
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TypeId" class="control-label">Type</label>
            <div class="form-group d-flex">
                @Html.DropDownListFor(model=>model.TypeId, new SelectList(ViewBag.DropDowns.Types, "Id", "Name", Model.Type), new { @class = "form-select"})
                @*<a asp-controller="AnimalTypes" asp-action="Create" class="btn btn-sm btn-outline-success icon-float-end"><i class="bi bi-plus-circle t-2"></i></a>*@
                <button type="button" class="btn btn-sm btn-outline-success icon-float-end" data-bs-toggle="modal" data-bs-target="#AddTypeModal"><i class="bi bi-plus-circle t-2"></i></button>
            </div>
            <span asp-validation-for="TypeId" class="text-danger"></span>
        </div>
    </div>
</div>
@await Html.PartialAsync("_ModalAddType", new AnimalTypeDto())