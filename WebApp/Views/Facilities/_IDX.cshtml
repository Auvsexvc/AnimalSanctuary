@model FacilityViewModel


<div class="card-body bg-light text-dark">
    <div class="row ">
        <div class="float-end">
            <p class="card-text mb-1"><b>Name: </b>@Model.Name</p>
            <p class="card-text mb-1">
                <b>Description: </b>@(
                string.IsNullOrEmpty(Model.Description) ? "..." : Model.Description.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description
                )
            </p>
            <p class="card-text mb-1"><b>Address: </b>@(string.Join(", ", new List<string?>() { @Model.StreetName, @Model.BuildingNumber, @Model.ApartmentNumber, @Model.City }.Where(x => !string.IsNullOrEmpty(x))))</p>
            <p class="card-text mb-1"><b>Max. Capacity: </b>@Model.MaxCapacity</p>
            <p class="card-text mb-1"><b>Free space: </b>@Model.FreeSpace</p>
            <p class="card-text mb-1"><b>Contact number: </b>@Model.PhoneNumber</p>
        </div>
    </div>
</div>