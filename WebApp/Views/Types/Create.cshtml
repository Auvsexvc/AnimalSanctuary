@using WebApp.Dtos
@model AnimalTypeDto

@{
    ViewData["Title"] = "Add new animal type";
}

<div class="card border-dark mb-3 mt-3 col-md-8 offset-2 w-30">
    <div class="card-header bg-success text-light">
        <h3 class="card-title">Add new animal type</h3>
    </div>
    <form asp-action="Create">
        <div class="card-body">
            <div class="col-md-11 d-flex">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-5 offset-1">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-5 offset-1">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer form-group mt-4">
            @if (userManager.GetUser(HttpContextAccessor.HttpContext!.Session.GetString("Id")) != null)
            {
                <button type="submit" class="btn btn-sm btn-success"><i class="bi bi-plus-circle"></i> Create</button>
            }
            @if (ViewBag.Session != null && ViewBag.Session == "false")
            {
                <a asp-action="List" class="btn btn-sm btn-secondary float-end"><i class="bi bi-x"></i> Back to list</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-sm btn-secondary float-end"><i class="bi bi-list"></i> Back to browser</a>
            }
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(':input').change(
            function () {
                $("#Cancel").prop("class", "btn btn-outline-danger float-end");
            }
        );
    </script>
}